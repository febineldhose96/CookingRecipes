style.

  .mainwrapper {
    display: flex;
    flex-direction: row;
    background-color: rgba(0, 0, 0, 0.1);
    position: absolute;
    top: 0;
    left: 0px;
    right: 0;
    bottom: 0;
    align-items:center;
    justify-content:center
      }
      .innerwrapper {
        height: 400px;
        width: 300px;
        background-color: white;
        align-items: center;
        display: flex;
        flex-direction: column;
      }
      form {
        display: flex;
        flex-direction: column;
      }
      .name_input {
        margin-block: 10px;
        height: 30px;
        width: 200px;
        border-radius: 8px;
        border: 0.3px grey solid;
        padding-left: 10px;
      }
      .email_input {
        margin-block: 10px;
        height: 30px;
        width: 200px;
        border-radius: 8px;
        border: 0.3px grey solid;
        padding-left: 10px;
      }
      .password_input {
        margin-block: 10px;
        height: 30px;
        width: 200px;
        border-radius: 8px;
        border: 0.3px grey solid;
        padding-left: 10px;
      }
      .confirm_input {
        margin-block: 10px;
        height: 30px;
        width: 200px;
        border-radius: 8px;
        border: 0.3px grey solid;
        padding-left: 10px;
      }
      .remember_span {
        margin-block: 10px;
      }
      .submit_butn {
        padding: 10px;
        background-color: cadetblue;
        color: white;
        border: none;
        border-radius: 10px;
        margin-top: 20px;
      }

.mainwrapper
  .innerwrapper
    h2 Register
    form(action="/set-password", method="POST")
      input.name_input(placeholder="name", type="text",name='username')
      input.email_input(placeholder="email", type="email" name='email')
      input.password_input(placeholder="password", type="password",name='password')
      input.confirm_input(placeholder="confirm password")
      span.remember_span
        input(type="checkbox")
        |  Remember me
      button.submit_butn(type="submit") Submit